@model Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
            <div />
            @*            <div asp-validation-summary="All"></div>*@ @*cria tipo uma lista dos erros relacionado aos cmapos*@
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0">Category Name</label>
                <input asp-for="Name" disabled class="form-control" />@*Para definir para onde o dado vai usar "asp-for"*@
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="p-0">Display Order</label>
                <input asp-for="DisplayOrder" disabled class="form-control" />@*Para definir para onde o dado vai usar "asp-for"*@
            </div>

            <div class="row">
                <div class="row pb-0.5 col-4 col-md-3">
                    <button type="Submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                        Back to list
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>